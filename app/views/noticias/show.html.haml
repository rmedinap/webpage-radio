%article.region
  %header
    = page_title! @noticia.titulo
  .inner
    = paragraph(@noticia.contenido)
  %section
    .autor
      = 'Autor: ' + @noticia.autor
  %section
    .autor
      = 'Categoria: ' + @noticia.categoria.nombre
  %figure
    %section
      - @noticia.videos.each do|video|
        = video.link_html
  %section
    - @noticia.soundclouds.each do |soundcloud|
      = soundcloud.link_html
  %figure
    %section
      - @noticia.itunes_players.each do |itunes_player|
        = raw(itunes_player.embed)
      - @noticia.fotos.each do |foto|
        = image_tag foto.imagen_foto(:show)

- if current_admin
  = link_to 'Editar', edit_noticia_path(@noticia), :class => 'button'
