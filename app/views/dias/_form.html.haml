= form_for @dia do |f|
  - if @dia.errors.any?
    #error_explanation
      %h2= "#{pluralize(@dia.errors.count, "error")} prohibited this dia from being saved:"
      %ul
        - @dia.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .actions
    = f.submit 'Guardar'
