
= render 'scripts/codaslider'

.region
  %h2.title
    = page_title! 'ProgramaciÃ³n'

  .administration.head
    = link_to 'Add Day', new_dia_path, :class => 'button new'

  #week-days.coda-slider
    - @dias.each do |dia|
      %div
        %h2.dia
          = link_to dia.nombre, dia
        - if current_admin
          .administration.head
            = link_to 'Agregar Programa', new_dia_programa_path(dia), :class => 'button new'
        - dia.programas.each do |programa|
          .content
            %article
              %header
                %h3
                  = programa.titulo
              .inner
                = paragraph(programa.contenido)
            - if current_admin
              .administration.iteration
                = link_to 'Editar', edit_dia_programa_path(dia, programa), :class => 'button edit'
                = link_to 'Eliminar', dia_programa_path(dia, programa), :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => 'button delete'






